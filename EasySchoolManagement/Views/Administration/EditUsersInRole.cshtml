@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Add or Remove User";
    var roleId = ViewBag.roleId;
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h4>Add or Remove Users from this Role</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].UserId" hidden />
                    <input asp-for="@Model[i].UserName" hidden />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-success" value="Update" />
            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleId" 
                class="btn btn-info">Cancel</a>
        </div>
    </div>
</form>