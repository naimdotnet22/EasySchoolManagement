@model List<ManageUserRoleViewModel>

@{
    ViewData["Title"] = "Add or Remove Role";
    var userId =  ViewBag.userId;
}


<form method="post">
    <div class="card">
        <div class="card-header">
            <h4>Add or Remove Role for this User</h4>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].RoleId" hidden />
                    <input asp-for="@Model[i].RoleName" hidden />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-success" value="Update" />
            <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@userId" 
                class="btn btn-info">Cancel</a>
        </div>
    </div>
</form>